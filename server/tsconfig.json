{
  "compilerOptions": {
    "rootDir": ".", // Where your TS files live
    "outDir": "./dist", // Where compiled JS will go
    "sourceMap": true, // Generate source maps for debugging
    "declaration": true, // Generate .d.ts files
    "declarationMap": true, // Generate source maps for .d.ts

    /* Module & Target */
    "module": "commonjs", // CommonJS for Node
    "target": "es2020", // Modern JS output
    "moduleResolution": "node", // Classic Node module resolution
    "resolveJsonModule": true, // Allow importing .json files

    /* Environment */
    "lib": ["es2020"], // Modern ECMAScript features
    "types": ["node"], // Include Node.js types
    "esModuleInterop": true, // Allow default imports for CommonJS
    "allowSyntheticDefaultImports": true,

    /* Strictness */
    "strict": true, // All strict type-checking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true, // Speeds up builds

    /* JSX (if needed for frontend) */
    "jsx": "react-jsx", // Can remove if backend only

    /* Other */
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src/**/*", "src/data/**/*.json", "prisma/**/*"]
}
